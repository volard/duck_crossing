root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = 80

[*.md]
indent_size = 2

[*.go]
indent_size = 4
indent_style = tab

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.sh]
indent_style = tab
